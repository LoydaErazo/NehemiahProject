@using UINProject.Models;
@model Cohortes
@{
    ViewBag.Title = "AgregarEditarCohorte";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-md-12">
            @if (Model.IdCohorte > 0)
            {

                <h2 class="text-center text-primary"> Editar Cohorte y guardar Cambios </h2>
            }
            else
            {
                <h2 class="text-center text-primary"> Agregar una nueva Cohorte </h2>
            }
            <br />
            @using (Html.BeginForm())
            {
                @Html.HiddenFor(x => x.IdCohorte)
                <div class="col-md-6">
                    <div class="form-group">
                        <label> Cohortes: </label>
                        <br />
                        @Html.TextBoxFor(x => x.NombreCohorte, htmlAttributes: new { @class = "form-group" })
                        @Html.ValidationMessageFor(x => x.NombreCohorte, null, htmlAttributes: new { @class = "Text-danger" })
                    </div>
                    <div class=" form-group">
                        <label class="control-label">Seleccionar Year</label>
                        @Html.DropDownListFor(x => x.IdYear, (IEnumerable<SelectListItem>)ViewBag.YearsList, htmlAttributes: new { @class = "form-control" })

                    </div>
                    <div class="form-group">
                        <center>
                            <input type="submit" class="btn btn-success" value="Enviar" />
                        </center>
                    </div>


                </div>
            }


        </div>

    </div>

</div>

@if (ViewBag.Existe != null && ViewBag.Existe == true)
{
    <script>
        alert("El Year ya tiene una Cohorte asignada!");
    </script>
}

