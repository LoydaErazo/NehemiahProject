@using UINProject.Models;
@model Estudiantes
@{
    ViewBag.Title = "CrearEditarEstudiante";
}

<div class="container-fluid">
    <div class=" row">
        <div class="col-md-12">
            @if (Model.IdEstudiante > 0)
            {
                <h1 class="text-center text-primary">Editar Alumno</h1>
            }
            else
            {
                <h1 class="text-center text-primary">Agregar Alumno</h1>
            }
            <br />
            @using (Html.BeginForm())
            {
                @Html.HiddenFor(x => x.IdEstudiante)
                @Html.HiddenFor(x => x.IdCohorte)

                <div class="col-md-6">
                    <div class=" form-group">
                        <label class="control-label">Nombre:</label>
                        @Html.TextBoxFor(x => x.NombreEstudiante, htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(x => x.NombreEstudiante, null, htmlAttributes: new { @class = "text-danger" })
                    </div>

                    <div class=" form-group">
                        <label class="control-label">Carnet:</label>
                        @Html.TextBoxFor(x => x.CarnetEstudiante, htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(x => x.CarnetEstudiante, null, htmlAttributes: new { @class = "text-danger" })
                    </div>
                    <div class=" form-group">
                        <label class="control-label">Edad:</label>
                        @Html.TextBoxFor(x => x.EdadEstudiante, htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(x => x.EdadEstudiante, null, htmlAttributes: new { @class = "text-danger" })
                    </div>

                    <div class=" form-group">
                        <label class="control-label">Telefono:</label>
                        @Html.TextBoxFor(x => x.TelefonoEstudiante, htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(x => x.TelefonoEstudiante, null, htmlAttributes: new { @class = "text-danger" })
                    </div>

                    <div class=" form-group">
                        <label class="control-label">Correo:</label>
                        @Html.TextBoxFor(x => x.CorreoEstudiante, htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(x => x.CorreoEstudiante, null, htmlAttributes: new { @class = "text-danger" })
                    </div>

                    <div class="form-group">
                        <center>
                            <button type="submit" class="btn btn-success">
                                <i class="glyphicon glyphicon-save"></i> Registrar
                            </button>
                        </center>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
