@using UINProject.Models;
@model List<Estudiantes>
@{
    ViewBag.Title = "AsignarEstudiantes";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-md-12">
            <h1 class="text-center text-primary">Listado de Estudiantes para asignación</h1>

        </div>
        <br />
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Nombre:</th>
                    <th></th>

                </tr>
            </thead>
            <tbody>
                @if (Model.Count > 0)
                {
                    foreach (var es in Model)
                    {
                        <tr>
                            <td>@es.NombreEstudiante</td>
                            <td>
                                <button class="btn btn-success" onclick="Asignar('@es.IdEstudiante', '@es.NombreEstudiante')">
                                   <i class="glyphicon glyphicon-plus-sign"></i>
                                    Asignar
                                </button>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="2" class="text-center">
                            <b>No hay datos!</b>
                        </td>
                    </tr>
                }
            </tbody>

        </table>

    </div>

</div>
<script>
    function Asignar(id, nombre) {
        var IdEspecialidad = parseInt('@ViewBag.IdEspecialidad');
        alertify.confirm("Desea asignar a esta especialidad a: " + nombre,
            function () {
                window.location.href = '/Especialidad/Asignar?IdEstudiante=' + id + "&IdEspecialidad=" + IdEspecialidad;
            })
    }
</script>
